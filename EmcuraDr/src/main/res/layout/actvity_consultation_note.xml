<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:id="@+id/layHeader"
        android:layout_alignParentTop="true"
        android:background="@color/toolBarColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Care Consultation"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:id="@+id/activity_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:drawableStart="@drawable/ic_launcher"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"/>
    </LinearLayout>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:visibility="visible"
        android:layout_margin="15dp"
        android:id="@+id/pat_card"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/layHeader"
        >


        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pat_layout"
            android:orientation="horizontal" >


            <FrameLayout
                android:id="@+id/sk"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_margin="10sp">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgUsersRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_call_screen"
                    app:border="true"
                    app:border_color="#FFFFFF"
                    app:border_width="1sp"
                    app:shadow="true" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical" />



            </FrameLayout>

            <RelativeLayout
                android:id="@+id/ppp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp" >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivIsonline"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/icon_notification"/>

                        <TextView
                            android:id="@+id/tvName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medium Text"
                            android:ellipsize="end"
                            android:layout_marginEnd="10dp"
                            android:maxLines="1"
                            android:textColor="@color/theme_red"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginTop="5dp"
                            android:textSize="13sp" />

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="TextView"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvZipcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="13sp" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

           </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:id="@+id/pat_card2"
                    android:layout_margin="15dp"
                    android:visibility="gone"
                    android:elevation="5dp"
                    >


                    <LinearLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:id="@+id/ppp2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:layout_marginTop="10sp" >

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">
                                <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">



                                    <TextView
                                        android:id="@+id/tvName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:ellipsize="end"
                                        android:layout_marginHorizontal="5dp"
                                        android:maxLines="1"
                                        android:textColor="@color/theme_red"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textSize="20sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="2"
                                    android:layout_marginHorizontal="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvdob"
                                        android:layout_width="match_parent"
                                        android:layout_marginEnd="10dp"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:layout_marginTop="5dp"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/tvGender"
                                        android:layout_width="match_parent"
                                        android:layout_marginEnd="10dp"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:layout_marginTop="5dp"
                                        android:textSize="13sp" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="2"
                                    android:layout_marginHorizontal="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvMobile"
                                        android:layout_width="match_parent"
                                        android:layout_marginEnd="10dp"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:layout_marginTop="5dp"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/tvHome"
                                        android:layout_width="match_parent"
                                        android:layout_marginEnd="10dp"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:layout_marginTop="5dp"
                                        android:textSize="13sp" />


                                </LinearLayout>

                                <TextView
                                    android:visibility="visible"
                                    android:id="@+id/tvEmail2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="-"
                                    android:textSize="13sp" />


                                <TextView
                                    android:visibility="visible"
                                    android:id="@+id/tvAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="-"
                                    android:textSize="13sp" />





                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>











